{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "noImplicitAny": true,
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "public",
        "build"
    ]
}